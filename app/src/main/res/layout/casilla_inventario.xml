<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/yay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="#48A9A6"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/casilla_por_defecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/imagen_producto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingRight="14dp"
                android:paddingLeft="14dp"
                app:srcCompat="@drawable/imagen_predeterminada" />

            <LinearLayout
                android:id="@+id/wa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/imagen_producto"
                android:layout_toRightOf="@+id/imagen_producto"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombre_producto"
                    android:layout_width="164dp"
                    android:layout_height="54dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Nombre Producto"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fecha_vencimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Fecha de vencimiento" />

                <TextView
                    android:id="@+id/producto_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0000000000"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lugar_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:layout_marginTop="6dp"
                android:layout_toStartOf="@+id/wa"
                android:orientation="vertical">

            <TextView
                android:id="@+id/precio"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="0000000"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="35dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/bt_editar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lugar_precio"
                android:layout_marginStart="73dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/wa"
                android:background="@drawable/botones_secundarios"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:clickable="true"
                android:onClick="irEditar"
                android:text="Editar"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>